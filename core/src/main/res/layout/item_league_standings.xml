<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="25dp">

    <TextView
        android:id="@+id/tv_rank_item"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="4dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_logo_table_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/team_logo"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rank_item"
        app:layout_constraintStart_toEndOf="@+id/tv_rank_item"
        app:layout_constraintTop_toTopOf="@+id/tv_rank_item" />

    <TextView
        android:id="@+id/tv_team_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        tools:text="@string/team_name"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo_table_item"
        app:layout_constraintStart_toEndOf="@+id/iv_logo_table_item"
        app:layout_constraintTop_toTopOf="@+id/iv_logo_table_item" />

    <TextView
        android:id="@+id/tv_played_table_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_win_table_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_win_table_item"
        app:layout_constraintTop_toTopOf="@+id/tv_win_table_item" />

    <TextView
        android:id="@+id/tv_win_table_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_draw_table_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_draw_table_item"
        app:layout_constraintTop_toTopOf="@+id/tv_draw_table_item" />

    <TextView
        android:id="@+id/tv_draw_table_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lose_table_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_lose_table_item"
        app:layout_constraintTop_toTopOf="@+id/tv_lose_table_item" />

    <TextView
        android:id="@+id/tv_lose_table_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goal_difference_table_header"
        app:layout_constraintEnd_toStartOf="@+id/tv_goal_difference_table_header"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_difference_table_header" />

    <TextView
        android:id="@+id/tv_goal_difference_table_header"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_points_table_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_points_table_item"
        app:layout_constraintTop_toTopOf="@+id/tv_points_table_item" />

    <TextView
        android:id="@+id/tv_points_table_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="@string/initial_standings"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:barrierDirection="left"
        app:constraint_referenced_ids="tv_points_table_item,tv_win_table_item,tv_played_table_item,tv_draw_table_item,tv_goal_difference_table_header,tv_lose_table_item"
        tools:layout_editor_absoluteX="410dp"
        tools:layout_editor_absoluteY="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>